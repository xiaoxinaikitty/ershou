    <groupId>com.xuchao</groupId>
    <artifactId>ershou</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <name>ershou</name>
    <description>ershou</description>
    <url/>
    <licenses>
        <license/>
    </licenses>
    <developers>
