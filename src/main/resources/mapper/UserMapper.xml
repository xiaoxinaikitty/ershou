<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xuchao.ershou.mapper.UserMapper">
    <resultMap id="BaseResultMap" type="com.xuchao.ershou.model.entity.User">
        <id column="user_id" property="userId" jdbcType="BIGINT"/>
        <result column="username" property="username" jdbcType="VARCHAR"/>
        <result column="password" property="password" jdbcType="VARCHAR"/>
        <result column="phone" property="phone" jdbcType="VARCHAR"/>
        <result column="role" property="role" jdbcType="VARCHAR"/>
        <result column="email" property="email" jdbcType="VARCHAR"/>
        <result column="avatar" property="avatar" jdbcType="VARCHAR"/>
        <result column="balance" property="balance" jdbcType="DECIMAL"/>
        <result column="is_locked" property="isLocked" jdbcType="TINYINT"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <insert id="insertUser" parameterType="com.xuchao.ershou.model.entity.User" useGeneratedKeys="true" keyProperty="userId">
        INSERT INTO user (
            username,
            password,
            phone,
            email,
            role,
            avatar,
            balance,
            is_locked,
            create_time
        ) VALUES (
            #{username},
            #{password},
            #{phone},
            #{email},
            #{role},
            #{avatar},
            #{balance},
            #{isLocked},
            #{createTime}
        )
    </insert>

    <select id="countByUsername" resultType="int">
        SELECT COUNT(*) 
        FROM user 
        WHERE username = #{username}
    </select>

    <select id="selectUserByUsernameAndPassword" resultMap="BaseResultMap">
        SELECT 
            user_id,
            username,
            password,
            role,
            phone,
            email,
            avatar,
            balance,
            is_locked,
            create_time
        FROM user 
        WHERE username = #{username} 
        AND password = #{password}
    </select>

    <select id="selectAdminByUsernameAndPassword" resultMap="BaseResultMap">
        SELECT 
            user_id,
            username,
            password,
            role,
            phone,
            email,
            avatar,
            balance,
            is_locked,
            create_time
        FROM user 
        WHERE username = #{username} 
        AND password = #{password}
        AND role = '系统管理员'
    </select>

    <insert id="insertUserAddress" parameterType="com.xuchao.ershou.model.entity.UserAddress" useGeneratedKeys="true" keyProperty="addressId">
        INSERT INTO user_address (
            user_id,
            consignee,
            region,
            detail,
            contact_phone,
            is_default
        ) VALUES (
            #{userId},
            #{consignee},
            #{region},
            #{detail},
            #{contactPhone},
            #{isDefault}
        )
    </insert>
    
    <!-- 根据用户ID查询用户信息 -->
    <select id="getUserById" resultMap="BaseResultMap">
        SELECT 
            user_id,
            username,
            password,
            role,
            phone,
            email,
            avatar,
            balance,
            is_locked,
            create_time
        FROM user 
        WHERE user_id = #{userId}
    </select>
    
    <!-- 根据手机号查询用户信息 -->
    <select id="getUserByPhone" resultMap="BaseResultMap">
        SELECT 
            user_id,
            username,
            password,
            role,
            phone,
            email,
            avatar,
            balance,
            is_locked,
            create_time
        FROM user 
        WHERE phone = #{phone}
    </select>
    
    <!-- 根据条件分页查询用户列表 -->
    <select id="listUsers" resultMap="BaseResultMap">
        SELECT 
            user_id,
            username,
            password,
            role,
            phone,
            email,
            avatar,
            balance,
            is_locked,
            create_time
        FROM user 
        <where>
            <if test="keyword != null and keyword != ''">
                AND (
                    username LIKE CONCAT('%', #{keyword}, '%') 
                    OR phone LIKE CONCAT('%', #{keyword}, '%')
                )
            </if>
            <if test="status != null">
                AND is_locked = #{status == 0}
            </if>
            <if test="startTime != null and startTime != ''">
                AND create_time &gt;= #{startTime}
            </if>
            <if test="endTime != null and endTime != ''">
                AND create_time &lt;= #{endTime}
            </if>
        </where>
        <choose>
            <when test="sortField == 'register' and sortOrder == 'asc'">
                ORDER BY create_time ASC
            </when>
            <when test="sortField == 'register' and sortOrder == 'desc'">
                ORDER BY create_time DESC
            </when>
            <when test="sortField == 'login' and sortOrder == 'asc'">
                ORDER BY create_time ASC
            </when>
            <when test="sortField == 'login' and sortOrder == 'desc'">
                ORDER BY create_time DESC
            </when>
            <otherwise>
                ORDER BY create_time DESC
            </otherwise>
        </choose>
        LIMIT ${(pageNum-1)*pageSize}, #{pageSize}
    </select>
    
    <!-- 根据条件统计用户数量 -->
    <select id="countUsers" resultType="long">
        SELECT COUNT(*)
        FROM user 
        <where>
            <if test="keyword != null and keyword != ''">
                AND (
                    username LIKE CONCAT('%', #{keyword}, '%') 
                    OR phone LIKE CONCAT('%', #{keyword}, '%')
                )
            </if>
            <if test="status != null">
                AND is_locked = #{status == 0}
            </if>
            <if test="startTime != null and startTime != ''">
                AND create_time &gt;= #{startTime}
            </if>
            <if test="endTime != null and endTime != ''">
                AND create_time &lt;= #{endTime}
            </if>
        </where>
    </select>
    
    <!-- 统计所有用户数量 -->
    <select id="countAllUsers" resultType="long">
        SELECT COUNT(*)
        FROM user
    </select>
    
    <!-- 根据锁定状态统计用户数量 -->
    <select id="countUsersByLockState" resultType="long">
        SELECT COUNT(*)
        FROM user
        WHERE is_locked = #{isLocked}
    </select>
    
    <!-- 根据角色统计用户数量 -->
    <select id="countUsersByRole" resultType="long">
        SELECT COUNT(*)
        FROM user
        WHERE role = #{role}
    </select>
</mapper>